{
  "Routes": [
    {
      "UpstreamPathTemplate": "/api/users/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/users/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "userservice",
          "Port": 80
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/get-token",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/get-token",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "shortenerservice",
          "Port": 80
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/shorten",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/shorten",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "shortenerservice",
          "Port": 80
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "UpstreamPathTemplate": "/{shortCode}",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/{shortCode}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "shortenerservice",
          "Port": 80
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5086"
  }
}