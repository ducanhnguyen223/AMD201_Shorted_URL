{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres.railway.internal;Port=5432;Database=railway;Username=postgres;Password=${POSTGRES_PASSWORD};",
    "RedisConnection": "${REDIS_URL}"
  },
  "JwtSettings": {
    "Secret": "THIS_IS_A_VERY_LONG_AND_STRONG_SECRET_KEY_FOR_JWT_AUTHENTICATION_AND_MUST_BE_KEPT_CONFIDENTIAL",
    "Issuer": "ShortenerApp",
    "Audience": "ShortenerApp.Client"
  },
  "RabbitMQ": {
    "HostName": "${RABBITMQ_HOST}",
    "Port": 5672,
    "UserName": "${RABBITMQ_USER}",
    "Password": "${RABBITMQ_PASSWORD}",
    "VirtualHost": "${RABBITMQ_VHOST}"
  }
}
